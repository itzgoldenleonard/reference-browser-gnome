      <image>https://raw.githubusercontent.com/itzgoldenleonard/reference-browser-gnome/master/metadata/Screenshot2.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/itzgoldenleonard/reference-browser-gnome/master/metadata/Screenshot3.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <releases>
      <release date="2023-08-31" version="0.1.1"/>
      <release date="2023-08-30" version="0.1.0"/>
  </releases>
</component>
