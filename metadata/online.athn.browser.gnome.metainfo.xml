<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>online.athn.browser.gnome</id>
  
  <name>ATHN reference browser</name>
  <summary>Browse ATHN sites</summary>
  <developer_name>Ava</developer_name>
  
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>CC0-1.0</project_license>

  <url type="homepage">https://gnome.browser.athn.online</url>
  <url type="vcs-browser">https://github.com/itzgoldenleonard/reference-browser-gnome</url>
  
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>
  
  <description>
    <p> ATHN browser for the gnome ecosystem. Read more about project ATHN at athn.online. You can even visit the ATHN site in this browser at athn.online/index.athn, try it out. </p>
    <p> Compatible with ATHN markup language v0.1.5 (alpha) and ATHN over https v0.1.1 (alpha). This browser serves as a reference for a correct implementation of those standards, written in rust. </p>
  </description>
  
  <launchable type="desktop-id">online.athn.browser.gnome.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/itzgoldenleonard/reference-browser-gnome/master/metadata/Screenshot1.png</image>
    </screenshot>
